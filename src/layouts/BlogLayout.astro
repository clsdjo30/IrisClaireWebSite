---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";

export interface Props {
  title: string; 
}

const canonicalURL = new URL(
  "https://chimerical-caramel-133df7.netlify.app/",
  Astro.site
).toString();

const resolvedImageWithDomain = new URL(
  "../../opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Le Blog d'Iris Clair"
  : "Iris Claire - Votre Portail vers l'Univers Mystique du Tarot";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Tous les sujets du moment sur notre blog : astrologie, horoscope, spiritualité, rituel, développement personnel…"
      canonical={canonicalURL}
      twitter={{
        creator: "@PlusLoinCece",
        site: "www.irisclaire.online",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: "/opengraph.jpg",
          type: "website",
          title: `Iris Claire - Votre Portail vers l'Univers Mystique du Tarot`,
          image: "/opengraph.jpg",
        },
        image: {
          alt: "Iris Claire Homepage Screenshot",
        },
      }}
    />
  </head>
  <body class="bg-violet-100 w-full mx-5">
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
