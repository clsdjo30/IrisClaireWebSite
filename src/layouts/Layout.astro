---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";

export interface Props {
  title: string;
 
}

const canonicalURL = new URL("https://irisclaire.com/", Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Iris Claire - Votre Guide Spirituel Personnel"
  : "Iris Claire - Votre Portail vers l'Univers Mystique du Tarot";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/adaptive-icon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Découvrez le tarot unique Iris Claire, votre guide spirituel personnel pour l'amour, la carrière et le bien-être. Rejoignez la communauté Iris Claire aujourd'hui."
      canonical={canonicalURL}
      twitter={{
        creator: "@PlusLoinCece",
        site: "www.irisclaire.online",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: "/opengraph.jpg",
          type: "website",
          title: `Iris Claire - Votre Portail vers l'Univers Mystique du Tarot`,
          image: resolvedImageWithDomain
        },
        image: {
          alt: "Iris Claire Homepage Screenshot",
        },
      }}
    />
  </head>
  <body class="bg-violet-100">
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
